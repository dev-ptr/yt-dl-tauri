{
  
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ezdl",
  "version": "0.1.0",
  "identifier": "ezdl.tauri.dev",
  "build": {
    "beforeDevCommand": "npm install && npm run dev",
    "beforeBuildCommand": "npm install && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ezdl",
        "width": 820,
        "height": 650,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": [
        "https://github.com/yt-dlp/yt-dlp/blob/master/supportedsites.md"
      ]
    }
  }
}


